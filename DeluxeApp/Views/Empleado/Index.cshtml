@model List<DeluxeApp.Models.Entities.Empleado>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Empleado</h2>

<input class="btn btn-default" type="submit" value="Agregar Nuevo" data-toggle="modal" data-target="#myModal">

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Fecha De Nacimiento</th>
            <th>Opciones</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@e.Apellidos</td>
                <td>@e.Edad</td>
                <td>@e.FechaNacimiento.ToString("dd/MM/yyyy")</td>

                <td>
                    <a href="@Url.Action("Actualizar", "Empleado", new { Id = e.Id})" class="btn btn-primary">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>

                    <a href="@Url.Action("Eliminar", "Empleado", new { Id = e.Id})" class="btn btn-primary">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

@Html.Partial("_CrearEmpleado", new DeluxeApp.Models.Entities.Empleado())