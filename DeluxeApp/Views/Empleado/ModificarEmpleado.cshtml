
@model DeluxeApp.Models.Entities.Empleado
@{
    ViewBag.Title = "Modificar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Guardar", "Empleado", FormMethod.Post, new { Class = "form-horizontal" }))
{

        @Html.HiddenFor(e=>e.Id)
        <div class="form-group">
            @Html.LabelFor(e => e.Nombre, new { Class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Nombre, new { Class = "form-control", placeholder = "Nombre" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Apellidos, new { Class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Apellidos, new { Class = "form-control", placeholder = "Apellidos" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.Edad, new { Class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.Edad, new { Class = "form-control", placeholder = "Edad" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(e => e.FechaNacimiento, new { Class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(e => e.FechaNacimiento, "{0:dd/MM/yyyy}", new { Class = "form-control" })
            </div>
        </div>   
              
                    <button type="submit" class="btn btn-primary">Guardar</button>
              
}